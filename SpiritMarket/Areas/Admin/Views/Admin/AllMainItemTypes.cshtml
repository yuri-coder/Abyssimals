@using SpiritMarket.Models;
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "All Main Item Types";
    ViewData["User"] = @ViewBag.User;
}

<div class="card border-success mb-3 mt-3 ml-auto mr-auto" style="max-width: 100%;">
    <div class="card-header border-success text-center">
        <h4><b>Select a Main Item Type to edit!</b></h4>
    </div>
    <div class="card-body text-success">
        <h4 class="card-title">Please select a main item type to edit.</h4>
        <p class="card-text text-danger">@ViewBag.AdminMessage
        </p>
       <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col" style="width: 15%;"><h5>Item Type ID</h5></th>
                <th scope="col"><h5>Name</h5></th>
                <th scope="col" style="width: 35%;"><h5>Description</h5></th>
                <th scope="col"><h5>Actions</h5></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(MainItemType itemType in ViewBag.AllMainItemTypes){
                        <tr>
                            <th scope="row" style="vertical-align: middle;"><h5>@itemType.MainItemTypeId</h5></th>
                            <td style="vertical-align: middle;"><h5>@itemType.Name</h5></td>
                            <td style="vertical-align: middle;"><p>@itemType.Description</p></td>
                            <td style="vertical-align: middle;">
                                <a asp-controller="Admin" asp-action="EditMainItemType" asp-route-mid=@itemType.MainItemTypeId><button class="btn btn-success"><b>Edit</b></button></a>
                                <a asp-controller="Admin" asp-action="DeleteMainItemType" asp-route-mid=@itemType.MainItemTypeId><button class="btn btn-danger"><b>Delete</b></button></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>