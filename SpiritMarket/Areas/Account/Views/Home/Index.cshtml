@using SpiritMarket.Models;
@{
    ViewData["Title"] = "Login/Register";
}

<h1>Welcome, Fledgling!</h1>
<hr>
<div class="row mt-3 justify-content-center">
    <div class="card-deck">
        <!-- <div class="col-6"> -->
            <div class="card border-success mb-3" style="max-width: 100%; min-height:45vh">
                <div class="card-header border-success text-center">
                    <b>Login!</b>
                </div>
                <div class="card-body text-success">
                    <h5 class="card-title">Welcome back!</h5>
                    <p class="card-text">Sign in below and hop back in there, Spirit!</p>

                    
                    <form asp-action="Login" asp-controller="Home" method="post">
                        <div class="form-group row">
                            <label for="Username" class="col-sm-4 col-form-label text-center text-muted">Username</label>
                            <div class="col-sm-8">
                                <input type = "text" name="Username" class="form-control" placeholder="Username">
                                <small class="form-text text-danger">@ViewBag.UsernameError</small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Password" class="col-sm-4 col-form-label text-center text-muted">Password</label>
                            <div class="col-sm-8">
                                <input type="password" name="Password" class="form-control" placeholder="Password">
                                <small class="form-text text-danger">@ViewBag.PasswordError</small>                          
                            </div>
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-success float-right align-text-bottom">Login</button>
                    </form>

                </div>
                <!-- <div class="card-footer bg-transparent border-success">Footer</div> -->
            </div>
        <!-- </div>
        <div class="col-6"> -->
            <div class="card border-success mb-3" style="max-width: 100%; min-height:45vh">
                <div class="card-header border-success text-center">
                    <b>Register!</b>
                </div>
                <div class="card-body text-success">
                    <h5 class="card-title">What's this? A new Spirit?</h5>
                    <p class="card-text">We need a little information before we let you in, though.</p>
                    @model User
                    <form asp-action = "Register" asp-controller="Home" method="post">
                        <div class = "form-group row">
                            <label asp-for="Username" class="col-sm-4 col-form-label text-center text-muted"></label>
                            <div class="col-sm-8">
                                <input asp-for="Username" class="form-control" placeholder="Username">
                                <small class="form-text text-danger"><span asp-validation-for="Username"></span>@ViewBag.TakenUsername</small>
                            </div>
                        </div>
                        <div class = "form-group row">
                            <label asp-for="Password" class="col-sm-4 col-form-label text-center text-muted"></label>
                            <div class="col-sm-8">
                                <input asp-for="Password" class="form-control" placeholder="Password">
                                <small class="form-text text-danger"><span asp-validation-for="Password"></span></small>
                            </div>
                        </div>
                        <div class = "form-group row">
                            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label text-center text-muted"></label>
                            <div class="col-sm-8">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                                <small class="form-text text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
                            </div>
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-success float-right">Register</button>
                    </form>
                </div>
                <!-- <div class="card-footer bg-transparent border-success">Footer</div> -->
            </div>
        <!-- </div> -->
    </div>
</div>